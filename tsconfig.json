{
    "compilerOptions": {
        "module": "commonjs",
        "skipLibCheck": true,
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "target": "es2017",
        "sourceMap": true,
        "resolveJsonModule": true,
        "incremental": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules/**", "dist/**"]
}
